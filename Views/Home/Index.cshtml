@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <select name="category" class="form-select" asp-items="ViewBag.Categories">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary" type="submit">
                        Filtrele
                    </button>
                </div>
            </div>
        </div>

    </form>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width:100px;">@Html.DisplayNameFor(m =>m.ProductID)</th>
            <th style="width:100px;">@Html.DisplayNameFor(m =>m.Name)</th>
            <th style="width:100px;">@Html.DisplayNameFor(m =>m.Image)</th>
            <th style="width:100px;">@Html.DisplayNameFor(m =>m.Price)</th>
            <th style="width:100px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in @Model){
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>
                    <img src="~/img/@product.Image" class="img-fluid" alt="@product.Name">
                </td>
                <td>@product.Price</td>
                <td>
                    <a href="" class = "btn btn-sm btn-warning">Düzenle</a>
                    <a href="" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
